{% extends 'base.twig' %}

{% block title %}
	{{ title }}
{% endblock %}

{% block content %}
	<div class="col-lg-3 col-xs-3 left-block">
		<div class="row"></div>
		<div class="row">
			<div class="col-xs-12">
				<ul class="nav nav-tabs tabs-left left-menu text-center">
					<li><a href="#main" data-toggle="tab">{{ main }}</a></li>
					<li><a href="#services" data-toggle="tab">{{ services }}</a></li>
					<li><a href="#projects" data-toggle="tab">{{ projects }}</a></li>
					<li><a href="#about" data-toggle="tab">{{ about }}</a></li>
					<li><a href="#contacts" data-toggle="tab">{{ contacts }}</a></li>
				</ul>
			</div>
		</div>
		<div class="row">
			<div class="col-xs-12">
				<form class="form-horizontal  text-center" action="{{ path('switch_lang') }}" method="post">
					<div class="form-group">
						<button type="submit" name="lang" class="btn btn-default" value="en">en</button>
						<button type="submit" name="lang" class="btn btn-default" value="ru">ru</button>
						<button type="submit" name="lang" class="btn btn-default" value="pl">pl</button>
					</div>
				</form>
			</div>
		</div>
	</div>


	<div class="col-lg-9 right-block">
		<div class="tab-content">
			<div class="tab-pane active" id="main">
				{% include 'main.twig' %}
			</div>
			<div class="tab-pane" id="services">services</div>
			<div class="tab-pane" id="projects">projects</div>
			<div class="tab-pane" id="about">about</div>
			<div class="tab-pane" id="contacts">contacts</div>
		</div>
	</div>
{% endblock %}